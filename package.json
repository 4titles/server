        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.4.13",
        "@nestjs/graphql": "^12.2.2",
        "@nestjs/platform-fastify": "^10.4.13",
        "@types/yargs": "^17.0.33",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.37.0",
        "graphql": "^16.9.0",
        "ioredis": "^5.4.1",
        "moviedb-promise": "^4.0.7",
        "nestjs-command": "^3.1.4",
